package layouts

import (
    "github.com/alcb1310/bca/externals/views/components"
    "github.com/alcb1310/bca/externals/views/navigation"
)

templ AuthenticatedLayout(title string) {
    @BaseLayout(title) {
        @components.Header()
        <div class="grid grid-cols-12 gap-1">
            @navigation.NavBar()

            <div class="col-span-10 overflow-x-hidden overflow-y-auto px-5 pt-5">
                { children... }
            </div>
        </div>

        @components.Drawer()
    }
}
