package components

templ DrawerTitle(title string) {
    <div class="px-2 py-3">
        <div class="flex justify-between">
            <h3 class="font-bold text-xl">{ title }</h3>
            <button onclick="closeDrawer()">
                <img src="/public/images/svg/close.svg" alt="cerrar" />
            </button>
        </div>
        <hr class="my-4 bg-blue-gray-700 border border-1" />
    </div>
}
